<div class="hero">
  <div class="hero-inner">
    <div class="hero-left">
      <h1 class="hero-title"><%= @site.site_name %></h1>
      <p class="hero-sub"><%= @site.hero_caption %></p>
      <div class="hero-actions">
        <%= link_to "Departments", departments_path, class: "btn primary" %>
        <%= link_to t("application.apply"), new_application_form_path, class: "btn primary" %>
      </div>
    </div>

    <% if @site.hero_image.attached? %>
      <div class="hero-right">
        <%= image_tag @site.hero_image, class: "hero-image", alt: @site.hero_alt %>
      </div>
    <% end %>
  </div>
</div>

<section class="section">
  <h2 class="section-title">Departments</h2>
  <div class="departments-list">
    <% @departments.each do |d| %>
      <div class="dept-card">
        <h3><%= d.name %></h3>
        <p><%= truncate(d.description, length: 120) %></p>
      </div>
    <% end %>
  </div>
</section>

<section class="section">
  <h2 class="section-title">Quick Facts</h2>
  <div class="stats-grid">
    <div class="stat-card"><strong><%= @departments.count %></strong> Departments</div>
    <div class="stat-card"><strong><%= @programs.count %></strong> Programs</div>
    <div class="stat-card"><strong>1500+</strong> Students</div>
    <div class="stat-card"><strong>50+</strong> Years of Education</div>
  </div>
</section>

<section class="cta">
  <h2>Apply Today</h2>
  <p>Start your professional future with us.</p>
  <%= link_to t("application.apply"), new_application_form_path, class: "btn primary" %>
</section>
